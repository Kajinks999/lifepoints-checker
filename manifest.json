{
  "manifest_version": 3,
  "name": "LifePoints Checker Pro",
  "version": "2.4",
  "description": "Verificação confiável de pesquisas no LifePoints",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "host_permissions": [
    "https://app.lifepointspanel.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}